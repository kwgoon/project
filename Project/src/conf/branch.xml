<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "dtd/mybatis-3-mapper.dtd">

<mapper namespace="Branch">
	<select id="selectAll" resultType="branch">
		SELECT *
		FROM branch
	</select>

	<select id="selectOne" parameterType="string" resultType="branch">
		SELECT *
		FROM branch
		WHERE no = #{no}
	</select>

	<update id="update" parameterType="branch">
		UPDATE branch
		SET name = #{name}, bnumber = #{bnumber}
		WHERE no = #{no}
	</update>

	<insert id="insert" parameterType="branch">
		INSERT INTO branch 
		VALUES (sequence_branch_no.NEXTVAL, #{name}, #{bnumber})
	</insert>

	<delete id="delete" parameterType="int">
		DELETE branch
		WHERE no = #{no}
	</delete>

	<delete id="deleteAll">
		DELETE branch
	</delete>
</mapper>