<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<select id="selectAll" resultType="board">
		SELECT no, title, days, id, count, type FROM board
	</select>
	<select id="selectOne" parameterType="int" resultType="board">
		SELECT * FROM board WHERE no=#{no}
	</select>
	<insert id="insertOne" parameterType="board">
		INSERT INTO board (sequence_board_no.NEXTVAL, #{title}, #{contents}, #{days}, #{id}, #{count}, #{type})
	</insert>
	<update id="updateOne" parameterType="board">
		UPDATE board SET title=#{title}, contents=#{contents}, type=#{type} WHERE no=#{no}
	</update>
	<delete id="deleteOne" parameterType="int">
		DELETE FROM board WHEREno=#{no}
	</delete> 
</mapper>