<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
					PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
					"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="border">

	<resultMap id="deptMapping" type="dept" >
		<result property="no" column="deptno"/>
		<result property="name" column="dname"/>
		<result property="address" column="loc"/>				
	</resultMap>

	<select id="selectAll" resultMap="deptMapping">
		select * from dept
	</select>
	
	<select id="selectOne" parameterType="int" resultMap="deptMapping">
		select * from dept where deptno=#{deptno}
	</select>
	<insert id="insertOne" parameterType="dept">
		insert into dept values( #{no} , #{name} , #{address} )
	</insert>
	
	<update id="updateOne" parameterType="java.util.HashMap">
		update dept set loc= #{address}   where deptno= #{no}
	</update>
	
	<delete id="deleteOne" parameterType="int">
		delete from dept where deptno=#{deptno}
	</delete> 
</mapper>